
@{
    ViewBag.Title = "TestContent";
    Layout = "~/Areas/ProjectHubAdmin/Views/Shared/_ProjectHubAdmin.cshtml";
}

<br />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add Test Content</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Technology</label>
                                <select class="form-control" id="ddlCategoryStatus">
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label>Test Paper</label>
                                <select class="form-control" id="ddlCategoryStatus">
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label>Status</label>
                                <select class="form-control" id="ddlCategoryStatus">
                                    <option>Active</option>
                                    <option>InActive</option>
                                </select>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Question Name</label>
                                <textarea id="txtProgram" class="form-control" rows="2" placeholder="Question Name"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>option 1 </label>
                                <textarea id="txtProgram" class="form-control" rows="3" placeholder="Option 1"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>option 2 </label>
                                <textarea id="txtProgram" class="form-control" rows="3" placeholder="Option 2"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>option 3 </label>
                                <textarea id="txtProgram" class="form-control" rows="3" placeholder="Option 3"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>option 4 </label>
                                <textarea id="txtProgram" class="form-control" rows="3" placeholder="Option 4"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <input type="hidden" id="hdnCategoryID">
                        <button type="button" class="btn btn-info" id="btnSubmit">Submit</button>
                        <button type="button" class="btn btn-secondary" id="btnClear">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

