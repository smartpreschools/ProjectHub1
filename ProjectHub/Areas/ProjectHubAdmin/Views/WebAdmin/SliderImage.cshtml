
@{
    ViewBag.Title = "SliderImage";
    Layout = "~/Areas/ProjectHubAdmin/Views/Shared/_ProjectHubAdmin.cshtml";
}

<br />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Slider Images</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Left Logo <em class="text-danger">*</em> </label>
                                <input type="file" placeholder="Left Logo"   class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label>Right Logo <em class="text-danger">*</em> </label>
                                <input type="file" placeholder="Right Logo"  class="form-control"  />
                            </div>
                            <div class="col-md-4">
                                <label>Slider 1 <em class="text-danger">*</em> </label>
                                <input type="file" placeholder="Slider 1"   class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Slider 2 <em class="text-danger">*</em> </label>
                                <input type="file" placeholder="Slider 2"  class="form-control"  />
                            </div>
                            <div class="col-md-4">
                                <label>Slider 3 <em class="text-danger">*</em> </label>
                                <input type="file" placeholder="Slider 3"  class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label>Slider 4 <em class="text-danger">*</em> </label>
                                <input type="file" placeholder="Slider 4"  class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <input type="hidden" id="hdnCategoryID">
                        <button type="button" class="btn btn-info" id="btnSubmit">Submit</button>
                        <button type="button" class="btn btn-secondary" id="btnClear">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


